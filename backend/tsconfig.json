{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "jsx": "react",
      "declaration": true,
      "rootDir": "./src"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.d.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  